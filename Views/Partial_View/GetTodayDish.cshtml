@model IEnumerable<ExampleB.Models.DishTime>
@using ExampleB.Controllers
@{
    string DisplayContains(bool item)
    {
        if (item)
        {
            return $"Yes";
        }
        return $"No";
    }
}
<section id="dish">
    <div class="content">
       
        @foreach (var item in Model)
        {
            
            
            <div class="item_time" style="opacity:@item.Opacity.ToString().Replace(",", ".");">
                <h3 style="text-align:center; ">Time @item.Time.Hour:00</h3>
            <div class="BlockD" id="dish_@item.id">
                <div>@Html.Image(item.Img, new { @class = "or" }) </div>
                <div><p style="text-align:center;"> @item.Name</p></div>
                <div><p>Calories @item.Сalories</p></div>

                <p>Contains glucose @DisplayContains(Convert.ToBoolean(item.Contains_Meat))</p>

                <p>Contains lactose @DisplayContains(Convert.ToBoolean(item.Contains_Milk))</p>

                <p>Contains sugar @DisplayContains(Convert.ToBoolean(item.Contains_Sugar))</p>

            </div>
            </div>
        }

    </div>

</section>
<style>

    #Chosen_dish, .content {
        display: flex;
        justify-content: space-around;
        flex-wrap: wrap;
    }

    input[type*='butt'] {
        border: none;
        width: 100%;
        height: 50px;
        border-radius: 30px;
        color: white;
    }

    .BlockD {
        margin: 20px;
        padding: 10px;
        border-radius: 20px;
        height: 370px;
        width: 300px;
        background: #F7F7F7;
    }

        .BlockD input {
            display: block;
        }

    .or {
        height: 150px;
        width: 100%;
    }
</style>
