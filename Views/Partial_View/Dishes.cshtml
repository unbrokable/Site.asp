@model IEnumerable<ExampleB.Models.Dish>
@using ExampleB.Controllers
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<section id="Chosen_dish">
    @{if (ViewBag.Basket != null) {
            foreach (var item in (IEnumerable<ExampleB.Models.Dish>)ViewBag.Basket)
            {
    <div class="BlockD" id="dish_@item.id">
        <div><p> @item.Name</p></div>

        <div><p>Калории @item.Сalories</p></div>
        <div>@Html.Image(item.Img, new { @class = "or" }) </div>


        @{ if (item.Contains_Meat)
            {
                <div>  <p> Содержить Мясо </p>  </div>
            }
            else
            {
                <div>  <p>Не Содержить Мясо </p>  </div>
            }
            if (item.Contains_Milk)
            {
                <div>  <p>Cодержить молоко </p>  </div>
            }
            else
            {
                <div>  <p>Не содержить молоко </p>  </div>
            }
            if (item.Contains_Sugar)
            { <div>  <p>Cодержить сахар </p>  </div>}
            else
            {
                <div>  <p> Не cодержить сахар</p>  </div>
            }
        }
        
        <input type="button" name="button1" id="Button_@item.id" value="Удалить" style="background: red;" />
    </div>
                    }
                } }

</section>
<hr/>
<section id="dish">
    <div class="content">

        @foreach (var item in Model)
        {
            <div class="BlockD" id="dish_@item.id">
                <div><p> @item.Name</p></div>

                <div><p>Калории @item.Сalories</p></div>

                <div>@Html.Image(item.Img, new { @class = "or" }) </div>

                @{ if (item.Contains_Meat)
                    {
                        <div>  <p> Содержить Мясо </p>  </div>
                    }
                    else
                    {
                        <div>  <p>Не Содержить Мясо </p>  </div>
                    }
                    if (item.Contains_Milk)
                    {
                        <div>  <p>Cодержить молоко </p>  </div>
                    }
                    else
                    {
                        <div>  <p>Не содержить молоко </p>  </div>
                    }
                    if (item.Contains_Sugar)
                    { <div>  <p>Cодержить сахар </p>  </div>}
                    else
                    {
                        <div>  <p> Не cодержить сахар</p>  </div>
                    }
                }
                <input type="button" name="button1" id="Button_@item.id" value="Добавить" />
            </div>
        }

    </div>
 
</section>
    <style>

        #Chosen_dish, .content {
            display: flex;
            justify-content: space-around;
            flex-wrap: wrap;
        }
        input[type*='butt']{
            width:100%;
            height:50px;
        }
        .BlockD{
            height:300px;
            width:300px;
        }
        .BlockD input{
           display:block;
        }
        .or {
            height: 100px;
            width: 100px;
        }
    </style>
